<script>
    $(document).ready(function () {

        // 返回頂部 
        $('.menutop').click(function (e) {
            e.preventDefault();
            $('body,html').animate({
                scrollTop: 0
            }, 700);
        });

        // 選單動畫
        $('.headul a').hover(function (e) {
            x = $(this).outerWidth();
            y = $(this).position().left;
            $('.myline').css({ "width": x + 'px', "left": y + 'px' });
            $(".headul a").mouseleave(
                function () {
                    $('.myline').css({ "width": 0 + 'px', "left": y + 'px' });
                })
        });

    })
</script>

