<script>
    $(document).ready(function () {

        // 返回頂部 
        $('.menutop').click(function (e) {
            e.preventDefault();
            $('body,html').animate({
                scrollTop: 0
            }, 700);
        });

        // 選單動畫
        $('.headul a').hover(function (e) {
            x = $(this).outerWidth();
            y = $(this).position().left;
            $('.myline').css({ "width": x + 'px', "left": y + 'px' });
            $(".headul a").mouseleave(
                function () {
                    $('.myline').css({ "width": 0 + 'px', "left": y + 'px' });
                })
        });
        
        // 收藏
        $('.collecticon').click(function () {
            $('.resultbox-1').toggleClass("on");
            $('.collecticon').toggleClass("on");
        });

        // 比較
        $('.compare').click(function () {
            $('.resultbox-2').toggleClass("on");
            $('.compare').toggleClass("on");
        });

        // 刪除
        $('.closex').click(function () {
            $(this).parent().remove();
        });


    })
</script>